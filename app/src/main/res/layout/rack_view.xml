<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonRackEdit"
        android:layout_width="59dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:onClick="onRackEditButtonPressed"
        android:scaleX=".5"
        android:scaleY=".5"
        app:backgroundTint="@color/white"
        app:layout_constraintStart_toEndOf="@+id/textViewRackName"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonRackLock"
        android:layout_width="59dp"
        android:layout_height="58dp"
        android:layout_marginStart="4dp"
        android:clickable="true"
        android:onClick="onRackLockButtonPressed"
        android:scaleX=".75"
        android:scaleY=".75"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutRack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.727"
        app:srcCompat="@android:drawable/ic_secure" />

    <TextView
        android:id="@+id/textViewRackName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:text="Rack Name"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutRack" />

    <LinearLayout
        android:id="@+id/linearLayoutRack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewRackName">

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

